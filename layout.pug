    //- mixin
    mixin card-magazine(title,img,tag)
        .magazine__img 
            img(src= img, alt="anh magazine")
            .tag 
                h1= tag
            .crossbar 
            .title= title
            .icon
                <i class="fas fa-bullhorn"></i>
    mixin card-vertical(title,img,size)
        .card__ver
            a(href="")
                img(src= img, alt="anh bai viet", srcset="") 
            a(href="")
                case size 
                    when 'normal'
                        h1(style={'font-size':'1.6rem'})= title 
                        if block 
                            block 
                    when 'big'
                        h1(style={'font-size':'2rem'})= title 
                        if block 
                            block
                    default
                        h1(style={'font-size':'1rem'})= title 
                        if block 
                            block
                
    mixin card-horizontal(title,img,size)
        .card__hor
            a(href="")
                img(src= img, alt="anh bai viet", srcset="") 
            a(href="")
                case size 
                    when 'normal'
                        h1(style={'font-size':'1.6rem'})= title 
                        if block 
                            block 
                    when 'big'
                        h1(style={'font-size':'2rem'})= title 
                        if block 
                            block
                    default
                        h1(style={'font-size':'1rem'})= title 
                        if block 
                            block
            
    body 
    
        .main
            //- This is layout of website
            //- this is header
            header.head
                .container
                    include ./src/pug/header.pug

            //-this is content . Be able to custom
            .wrapper
                .content
                    .container
                         block content

                //- footer
                footer.footer
                    .container
                        include ./src/pug/footer.pug
            
